print("Welcome to the rollercoaster!")
height = int(input("What is your height in cm: "))
bill = 0

if height >= 120:
    print("you can ride the coaster")
    age = int(input("what is your age: "))
    if age <= 18:
        bill = 10
        print("ticket is gonna be 10$")
    elif age <= 12:
        bill = 7
        print("ticket is gonna be 7$")
    else:
        bill = 15
        print("ticket is gonna be 15$")

    wants_photo = input("do you want a photo y/n: ")
    if wants_photo == "y":
        bill += 3

    print(f"final bill is {bill}")
else:
    print("sorry you have to grow taller to ride ")
